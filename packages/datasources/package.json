{
  "name": "@joseph.ehler/wizard-datasources",
  "version": "0.1.0",
  "description": "Data source manager with SSRF protection, retries, circuit breakers, caching",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --clean",
    "dev": "tsup src/index.ts --format esm,cjs --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "data-sources",
    "ssrf-protection",
    "retry",
    "circuit-breaker",
    "cache",
    "resilience"
  ],
  "author": "Intelligence Studio",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/joseph-ehler/forms-studio.git",
    "directory": "packages/datasources"
  },
  "homepage": "https://github.com/joseph-ehler/forms-studio#readme",
  "bugs": {
    "url": "https://github.com/joseph-ehler/forms-studio/issues"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "dependencies": {
    "@joseph.ehler/wizard-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0",
    "zod": "^3.22.0"
  }
}
