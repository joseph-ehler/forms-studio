{
  "plugins": ["stylelint-use-logical"],
  "rules": {
    "declaration-property-value-disallowed-list": {
      "gap": ["/^(?!var\\(--ds-space-).*/"],
      "padding": ["/^(?!var\\(--ds-padding-).*/"],
      "margin": ["/^(?!var\\(--ds-space-).*/"],
      "min-height": ["/^(44px|48px|56px|64px)$/"],
      "border-radius": ["/^(?!var\\(--ds-radius-).*/"],
      "z-index": ["/^(?!var\\(--ds-z-).*/"]
    },
    "color-named": "never",
    "color-no-hex": [true, {
      "message": "Use CSS custom properties (--ds-color-*) instead of hex colors"
    }],
    "csstools/use-logical": [
      "always",
      {
        "except": [
          "top",
          "bottom", 
          "left",
          "right"
        ]
      }
    ],
    "custom-property-pattern": [
      "^ds-[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      {
        "message": "Custom properties must follow --ds-* naming convention"
      }
    ]
  },
  "ignoreFiles": [
    "**/node_modules/**",
    "**/dist/**",
    "**/styles/tokens/**"
  ]
}
