{
  "rules": {
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.object.name='document'][callee.property.name='querySelector'][arguments.0.value=/button|input|select|textarea/]",
        "message": "❌ Use getFocusableElements() from focus utils instead of manual querySelectorAll"
      },
      {
        "selector": "CallExpression[callee.object.name='document'][callee.property.name='querySelectorAll'][arguments.0.value=/button|input|select|textarea/]",
        "message": "❌ Use getFocusableElements() from focus utils instead of manual querySelectorAll"
      },
      {
        "selector": "MemberExpression[object.name='document'][property.name='activeElement']",
        "message": "⚠️  Consider using debugFocus() helper for debugging focus state"
      }
    ],
    "no-restricted-properties": [
      "error",
      {
        "object": "element",
        "property": "focus",
        "message": "⚠️  Use focusElement() helper from focus utils for consistent focus behavior"
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/lib/focus/**/*.ts", "**/lib/focus/**/*.tsx"],
      "rules": {
        "no-restricted-syntax": "off",
        "no-restricted-properties": "off"
      }
    }
  ]
}
