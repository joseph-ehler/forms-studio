{
  "name": "@intelligence-studio/forms-studio",
  "version": "0.1.0",
  "private": true,
  "description": "AI-authorable, privacy-first, JSON-driven forms & wizard engine",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!./examples/* && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.2",
    "turbo": "^1.13.0",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
