{
  "name": "@intelligence-studio/forms-studio",
  "version": "0.2.1",
  "private": true,
  "type": "module",
  "description": "AI-authorable, privacy-first, JSON-driven forms & wizard engine",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "depgraph:check": "depcruise --config .dependency-cruiser.js packages",
    "imports:audit": "./scripts/audit-imports.sh",
    "imports:check": "node scripts/import-doctor.mjs",
    "imports:fix": "node scripts/import-doctor.mjs --fix",
    "barrels": "node scripts/barrelize.mjs",
    "docs:autostow": "node scripts/hygiene/docs-autostow.mjs",
    "docs:lint": "node scripts/hygiene/docs-lint.mjs",
    "name-police": "node scripts/hygiene/name-police.mjs",
    "repo:steward": "node scripts/hygiene/repo-steward.mjs",
    "repo:cleanup": "./scripts/cleanup-repo.sh",
    "guard": "pnpm repo:steward && pnpm imports:check && pnpm depgraph:check",
    "preflight:green": "node scripts/hygiene/preflight-green.mjs",
    "refine:dry": "node scripts/refiner/index.mjs",
    "refine:run": "node scripts/refiner/index.mjs --apply",
    "refine:css-contrast": "node scripts/refiner/check-css-contrast.mjs",
    "validate:recipe": "node scripts/factory/validate-recipe.mjs",
    "validate:recipes": "node scripts/factory/validate-recipe.mjs",
    "test:recipe-quality": "node scripts/factory/test-recipe-quality.mjs",
    "analyze:field": "node scripts/analyzer/field-analyzer.mjs",
    "analyze:batch": "node scripts/analyzer/analyze-batch.mjs",
    "analyze:verify": "node scripts/analyzer/analyze-batch.mjs --quiet \"packages/forms/src/fields/**/*.tsx\"",
    "audit:architecture": "node scripts/audit/run-architecture-audit.mjs",
    "audit:architecture:json": "node scripts/audit/run-architecture-audit.mjs --json",
    "spec:from-analysis": "node scripts/analyzer/to-spec.mjs",
    "spec:validate": "node scripts/process/validate-spec.mjs",
    "field:new": "node scripts/process/field-from-spec-v2.mjs",
    "field:new:v1": "node scripts/process/field-from-spec.mjs",
    "generator:test": "node scripts/process/test-generator.mjs",
    "new:ds:primitive": "hygen ds primitive new",
    "new:docs:adr": "hygen docs adr new",
    "codemod": "node tools/codemods",
    "codemod:add-aria": "node tools/codemods/add-missing-aria-label.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!./examples/* && changeset publish",
    "gen:picker": "hygen picker new",
    "test:overlay-smoke": "playwright test tests/overlay.spec.ts",
    "storybook": "storybook dev -p 6008",
    "storybook:all": "concurrently -n \"DS,Forms,Root\" \"pnpm --filter @intstudio/ds storybook\" \"pnpm --filter @intstudio/forms storybook\" \"pnpm storybook\"",
    "build-storybook": "pnpm --filter @intstudio/ds build-storybook && pnpm --filter @intstudio/forms build-storybook && storybook build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/generator": "^7.28.5",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@types/node": "^20.11.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cspell": "^9.2.2",
    "danger": "^13.0.4",
    "dependency-cruiser": "^17.1.0",
    "eslint": "^9",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "hygen": "^6.2.11",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.2.5",
    "markdownlint-cli": "^0.45.0",
    "postcss": "^8.5.6",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-validate-links": "^13.1.0",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.16",
    "tsup": "^8.0.2",
    "turbo": "^1.13.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.46.2",
    "vitest": "^1.5.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "pnpm -w eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.12.9"
  }
}
