{
  "name": "intelligence-studio-forms",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.18 <23"
  },
  "volta": {
    "node": "20.19.0",
    "pnpm": "9.12.0"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/**' build",
    "dev": "pnpm -r --parallel --filter './packages/**' dev",
    "typecheck": "pnpm -r --filter './packages/**' typecheck",
    "play": "pnpm --filter playground dev",
    "clean": "rm -rf **/dist **/node_modules",
    "validate:docs": "node scripts/validate-docs.mjs",
    "validate:naming": "node scripts/validate-naming.mjs",
    "validate:all": "pnpm validate:docs && pnpm validate:naming",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "test:validator": "node scripts/__tests__/validate-docs.test.mjs",
    "setup:hooks": "node scripts/setup-hooks.mjs",
    "postinstall": "node scripts/setup-hooks.mjs",
    "doc:new": "node scripts/doc-new.mjs",
    "barrels": "tsx scripts/gen-barrels.mts",
    "fix:barrels": "node scripts/fix-barrels.mjs",
    "fix:imports": "pnpm exec eslint --config .eslintrc.import-hygiene.cjs --ignore-pattern \"**/flowbite-react-blocks*/**\" --fix \"packages/**/*.{ts,tsx,js,jsx}\"",
    "lint": "pnpm exec eslint --config .eslintrc.import-hygiene.cjs --ignore-pattern \"**/flowbite-react-blocks*/**\" \"packages/**/*.{ts,tsx,js,jsx}\"",
    "lint:prod": "pnpm exec eslint --config .eslintrc.import-hygiene.cjs 'packages/**/src/**/*.{ts,tsx,js,jsx}' --ignore-pattern '**/*.stories.*' --ignore-pattern 'packages/**/src/tokens/themes/**'",
    "lint:fix": "pnpm exec eslint --config .eslintrc.import-hygiene.cjs --ignore-pattern \"**/flowbite-react-blocks*/**\" \"packages/**/*.{ts,tsx,js,jsx}\" --fix",
    "lint:css": "stylelint 'packages/**/*.css'",
    "design:lint": "node --loader tsx scripts/design-lint.mts",
    "design:contrast": "node --loader tsx scripts/design-contrast.mts",
    "deps:cycles": "node scripts/check-cycles.mjs",
    "prebuild": "pnpm barrels",
    "guard": "pnpm fix:imports && pnpm typecheck",
    "versions:check": "node scripts/check-versions.mjs",
    "doctor": "pnpm barrels && pnpm lint:prod && pnpm typecheck && pnpm -r --filter './packages/**' build",
    "doctor:rename": "node scripts/validate-renames.mjs && pnpm typecheck",
    "ds:doctor": "pnpm doctor",
    "ds:new": "echo 'ðŸš§ Component generator coming soon! For now, use Input.template.tsx as reference.'",
    "refactor:rename": "tsx scripts/refactor-rename.mts",
    "metrics:adoption": "node scripts/metrics/adoption.mjs",
    "metrics:ci": "node scripts/metrics/ci.mjs",
    "metrics:all": "pnpm metrics:adoption && pnpm metrics:ci",
    "api:build": "pnpm -r --filter './packages/**' build",
    "api:check": "pnpm -r --filter '@intstudio/ds' api:check",
    "api:update": "pnpm -r --filter '@intstudio/ds' api:update",
    "prepr": "pnpm doctor && pnpm api:build && pnpm api:check",
    "sb": "storybook dev -p 6006",
    "sb:build": "storybook build",
    "sb:test": "storybook test --watch",
    "sb:test:ci": "storybook test --url file:./storybook-static",
    "sb:new": "node scripts/new-story.mjs"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.53.3",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/addon-viewport": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@storybook/test": "8.6.14",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "barrelsby": "^2.8.1",
    "dependency-cruiser": "^17.1.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-cascade": "workspace:^",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "fast-glob": "^3.3.3",
    "flowbite": "2.5.2",
    "flowbite-react": "0.10.2",
    "globby": "^15.0.0",
    "madge": "^7.0.0",
    "markdownlint-cli": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "8.6.14",
    "ts-morph": "^27.0.2",
    "tsx": "^4.20.6",
    "typescript": "5.8.2",
    "vite": "5.4.10"
  },
  "pnpm": {
    "overrides": {
      "eslint": "8.57.1",
      "typescript": "5.8.2",
      "@typescript-eslint/parser": "8.46.2",
      "@typescript-eslint/eslint-plugin": "8.46.2",
      "eslint-plugin-import": "2.32.0",
      "eslint-plugin-simple-import-sort": "12.1.1",
      "eslint-plugin-jsx-a11y": "6.10.2",
      "tailwindcss": "3.4.14",
      "flowbite-react": "0.10.2",
      "flowbite": "2.5.2",
      "vite": "5.4.10",
      "@storybook/react-vite": "8.6.14",
      "@storybook/addon-essentials": "8.6.14",
      "@storybook/addon-a11y": "8.6.14",
      "@storybook/addon-interactions": "8.6.14",
      "@storybook/addon-viewport": "8.6.14",
      "@storybook/test": "8.6.14"
    }
  }
}
