{
  "$schema": "https://json.schemastore.org/stylelintrc",
  "rules": {
    "declaration-property-value-disallowed-list": {
      "/^(color|background|border-color|outline-color|fill|stroke)$/": [
        "/#/",
        "/rgb/",
        "/hsl/"
      ],
      "/^(padding|margin|gap|inset|width|height|top|right|bottom|left)$/": [
        "/\\d+px/"
      ]
    },
    "function-disallowed-list": [
      "rgb",
      "rgba",
      "hsl",
      "hsla"
    ],
    "color-no-hex": true
  },
  "ignoreFiles": [
    "**/node_modules/**",
    "**/dist/**",
    "**/tokens.css"
  ]
}
