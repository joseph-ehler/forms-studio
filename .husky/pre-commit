#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run classmap validation if control/** files changed
CHANGED_FILES=$(git diff --cached --name-only)

if echo "$CHANGED_FILES" | grep -q "packages/ds/src/control/"; then
  echo "üîç Validating component classmap..."
  pnpm ds:classmap:validate || exit 1
fi

# Run lint-staged for other checks
pnpm lint-staged
